#! /bin/sh

$BUILDDIR/src/ifm -I$SRCDIR/lib -w -task -format raw 2>&1 > $BUILDDIR/tests/task-note.out <<END
# Test of note lists.

room "Start";
task "Win" after first;

room "Kitchen" dir s note "Funny smell here";
item "spoon" note "it's a spoon" note "or is it?";

room "Garage" dir s;
task "Do first" tag first note "First task" note "Another note";
END

cmp -s $SRCDIR/tests/task-note.exp $BUILDDIR/tests/task-note.out
