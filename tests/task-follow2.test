#! /bin/sh

$BUILDDIR/src/ifm -I$SRCDIR/lib -w -task -format raw 2>&1 > $BUILDDIR/tests/task-follow2.out <<END
# Test 'follow' dependencies.

room "Room 1";
item "hammer" tag hammer;
task "Room1" tag room1 need hammer;

room "Room 2" dir n;
item "tongs" tag tongs;
task "Room2" tag room2;

room "Room 3" dir n;
task "Room3" tag room3 follow room1 need tongs;
END

cmp -s $SRCDIR/tests/task-follow2.exp $BUILDDIR/tests/task-follow2.out
