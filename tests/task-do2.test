#! /bin/sh

$BUILDDIR/src/ifm -I$SRCDIR/lib -w -task -format raw 2>&1 > $BUILDDIR/tests/task-do2.out <<END
# Test of task 'do' keyword.

room "Room 1";
task "Cut hole in door" do open_door;
task "Kick door down" do open_door;

room "Room 2" dir e after open_door;
task "Open door" tag open_door ignore do trigger_alarm;
task "Trigger alarm" tag trigger_alarm score 1;
task "Win" finish;
END

cmp -s $SRCDIR/tests/task-do2.exp $BUILDDIR/tests/task-do2.out
