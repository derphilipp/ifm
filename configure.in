dnl Process this file with autoconf to produce a configure script.
AC_INIT(src/ifm-main.c)
AC_CONFIG_AUX_DIR(config)

AM_INIT_AUTOMAKE(ifm, 3.1)
AM_CONFIG_HEADER(config.h)
AM_WITH_DMALLOC

dnl Checks for programs.
AC_PROG_CC
AC_PROG_YACC
AM_PROG_LEX
AC_PROG_INSTALL
AC_PROG_RANLIB
AC_PROG_MAKE_SET
AC_PATH_PROG(PERL, perl)
AC_PATH_PROGS(WISH, wish wish8.0 wish80, no)

dnl Checks for header files.
AC_HEADER_DIRENT
AC_HEADER_STDC
AC_CHECK_HEADERS(limits.h malloc.h strings.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T
AC_STRUCT_ST_BLKSIZE
AC_STRUCT_ST_BLOCKS
AC_STRUCT_ST_RDEV

dnl Checks for library functions.
AC_FUNC_ALLOCA
AC_FUNC_FNMATCH
AC_TYPE_SIGNAL
AC_FUNC_VPRINTF
AC_CHECK_FUNCS(re_comp regcomp strdup strerror)

dnl Checks for libraries.
AC_CHECK_LIB(m, sin)

dnl Determine what to build.
BUILD="vars src lib doc tests"
AC_SUBST(BUILD)

if test $PERL != no; then
	BUILD="$BUILD scr2ifm"
fi

if test $WISH != no; then
	BUILD="$BUILD tkifm"
fi

dnl Check for executable suffix.
AC_CYGWIN

dnl Add common Makefile rules.
common_rules=$srcdir/config/Makefile.add
AC_SUBST_FILE(common_rules)

dnl Write Makefiles.
AC_OUTPUT(
Makefile
vars/Makefile
src/Makefile
lib/Makefile
doc/Makefile
scr2ifm/Makefile
tkifm/Makefile
tests/Makefile
)
